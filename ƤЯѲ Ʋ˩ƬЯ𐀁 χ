

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $ULTRAX_REPO == "pro_ultra_bot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $ULTRAX_REPO == "pro_ultra_bot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $ULTRAX_REPO =~ $regex ]]
    then
        if [[ $ULTRAX_REPO_BRANCH ]]
        then
            echo "${ULTRAX_REPO}/archive/${ULTRAX_REPO_BRANCH}.zip"
        else
            echo "${ULTRAX_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="pro_ultra_bot.zip"
    echo "  Starting Downloading PRO_ULTRA_BOT Source Code...😎"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data Ho Raha Hai 🔐..."
    ULTRAXPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  pro_ultra_bot Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $ULTRAXPATH
    echo "    ⚜️Starting ƤЯѲ Ʋ˩ƬЯ𐀁 χ⚜️     "
    echo "
    🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳🇮🇳
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
